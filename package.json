{
  "name": "@please/lrud",
  "version": "0.0.5",
  "description": "A React library for managing focus in TV apps.",
  "main": "es/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "clean": "rimraf ./dist ./es ./tmp ./lib",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean",
    "prebuild": "npm run clean",
    "prettier": "prettier --config ./.prettierrc --write **/*.{js,css}",
    "build": "npm run build:types && npm run build:es",
    "build:types": "tsc --emitDeclarationOnly",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --extensions '.ts,.tsx'"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "*.js",
    "*.css",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesplease/lrud.git"
  },
  "keywords": [
    "lrud",
    "tv",
    "react",
    "component",
    "navigation",
    "focus",
    "remote"
  ],
  "author": "James Please",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesplease/lrud/issues"
  },
  "homepage": "https://github.com/jamesplease/lrud#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-external-helpers": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.3.0",
    "babel-loader": "^8.0.6",
    "coveralls": "3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "jest": "26.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  }
}
